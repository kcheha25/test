            temp_path = os.path.join(output_dir, f"temp_{name}.png")
            plt.savefig(temp_path, bbox_inches='tight', pad_inches=0, dpi=100)
            plt.close()

            # 3. Redimensionnement exact en 640x640
            img = Image.open(temp_path).convert('RGB')
            img = img.resize(TARGET_SIZE)
            final_path = os.path.join(output_dir, "images", f"{name}.png")
            img.save(final_path)