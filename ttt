data = np.array(mean_pixel_values).reshape(-1, 1)  # Reshape nécessaire pour K-means

# Calculer l'inertie pour chaque k de 1 à 10
inertias = []
for k in range(1, 11):
    kmeans = KMeans(n_clusters=k, random_state=42).fit(data)
    inertias.append(kmeans.inertia_)

# Tracer la courbe du coude
plt.figure(figsize=(10, 6))
plt.plot(range(1, 11), inertias, marker='o', linestyle='--')
plt.title("Méthode du coude : Inertie en fonction du nombre de clusters")
plt.xlabel("Nombre de clusters")
plt.ylabel("Inertie")
plt.grid()
plt.show()