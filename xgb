    plt.figure(figsize=(10, 6))
    indices = np.arange(len(feuille_counts))  # Indices des groupes (BBox/ROI)
    
    plt.bar(indices, feuille_counts, color='blue', edgecolor='black', alpha=0.7)
    
    plt.xlabel("Index du groupe (BBox)")
    plt.ylabel("Nombre de feuillets détectés")
    plt.title("Nombre de feuillets détectés par ROI")
    
    plt.xticks(indices)  # Afficher chaque index sur l'axe X
    plt.grid(axis='y', linestyle='--', alpha=0.7)
    
    plt.show()