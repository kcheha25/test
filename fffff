def group_feuillets(feuillets):
    groups = []
    visited = set()
    
    for i, feuillet1 in enumerate(feuillets):
        if i in visited:
            continue
        
        # Créer un nouveau groupe
        group = [i]
        visited.add(i)
        
        # Vérifier si d'autres feuillets peuvent être ajoutés au groupe
        for j, feuillet2 in enumerate(feuillets):
            if j not in visited and are_feuillets_similar(feuillet1, feuillet2):
                group.append(j)
                visited.add(j)
        
        groups.append(group)
    
    return groups